@{
    Layout = "_Layout";
}

<article class="my-blog">
    <h1>@ViewBag.Title</h1>
    <div class="details">
        Posted on <span>@ViewBag.Posted</span> by <span>@ViewBag.Author</span>
    </div>
    <div class="content">
        @ViewBag.Body
    </div>
</article>