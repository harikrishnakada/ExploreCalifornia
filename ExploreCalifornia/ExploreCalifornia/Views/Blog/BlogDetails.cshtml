@model ExploreCalifornia.Models.BlogDetails
@{
    Layout = "_Layout";
}

<article class="my-blog">
    <h1>@Model.Title</h1>
    <div class="details">
        Posted on <span>@Model.PostedOn</span> by <span>@Model.Author</span>
    </div>
    <div class="content">
        @Model.Body
    </div>
</article>